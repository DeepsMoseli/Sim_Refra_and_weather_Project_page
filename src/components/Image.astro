---
import { Image as AstroImage } from "astro:assets";

interface Props {
  src: ImageMetadata;
  alt: string;
  invertInDarkMode?: boolean;
}

const { src, alt, invertInDarkMode = false } = Astro.props;
---

<AstroImage
  class={`rounded-lg max-h-[35rem] w-max object-contain !px-0 ${invertInDarkMode && "dark:invert"}`}
  src={src}
  alt={alt}
/>
