---
import { Picture as AstroPicture } from "astro:assets";
import { renderPDF } from "../lib/render-pdf";

interface Props {
  src: ImageMetadata | `${string}.pdf`;
  alt: string;
  priority?: boolean;
  invertInDarkMode?: boolean;
}

const { src, alt, priority = false, invertInDarkMode = false } = Astro.props;

let image: ImageMetadata;

if (typeof src === "string") {
  image = await renderPDF(src);
} else {
  image = src;
}
---

<AstroPicture
  class={`rounded-lg max-h-[35rem] w-max object-contain !px-0 ${invertInDarkMode && "dark:invert"}`}
  src={image}
  alt={alt}
  layout="full-width"
  formats={["avif", "webp"]}
  priority={priority}
/>
